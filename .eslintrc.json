{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["*.d.ts", "graphql.ts"],
  "rules": {
    "quotes": [2, "double"],
    "semi": [2, "always"],
    "comma-dangle": 0,
    "no-unused-vars": 0,
    "curly": 0,
    "indent": 0
  }
}
